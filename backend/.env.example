# Application
APP_NAME=OP Admin System
APP_VERSION=1.0.0
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=["*"]

# Database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/op_admin
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# JWT
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# OpenIM (用于客服聊天)
OPENIM_API_URL=http://toci-dev-01.aurora:10002
OPENIM_WS_URL=ws://toci-dev-01.aurora:10001
OPENIM_SECRET=your-openim-secret
OPENIM_ADMIN_USER_ID=admin
OPENIM_PLATFORM_ID=1

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# Pagination
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# File Upload
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Kafka
KAFKA_BOOTSTRAP_SERVERS=meme-kafka-01.aurora:9092
KAFKA_CONSUMER_GROUP=op-admin-meme-review
KAFKA_MEME_CREATION_TOPIC=memecoin.meme_creation
KAFKA_MEME_APPROVED_TOPIC=memecoin.meme_approved
KAFKA_AUTO_OFFSET_RESET=earliest

# External Notification API
NOTIFICATION_API_URL=http://toci-dev-01.aurora:8014

# Recommendation / Post Weight
POST_WEIGHT_API_URL=http://toci-dev-01.aurora:9200/cache/operation-priority/add
POST_WEIGHT_API_TOKEN=secret
